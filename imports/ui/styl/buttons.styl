@import './variables'
.btn
    cursor pointer
    font-family 'Varela Round'
    display inline-block
    padding 4px 18px
    background none
    outline none
    border 1px solid transparent
    border-radius 9px
    transition color 400ms ease, background 400ms ease
    &-big
        font-size 40px
    for color, value in colormap
        &-{color}
            border-color darken(value, 5)
            color darken(value, 5)
            &:hover, &.router-link-active
                color darken(value, 1)
                background rgba(darken(value, 5), 0.05)
        
        
