@import './variables'
input:not([type=checkbox]),textarea
    font-family 'Alef Regular'
    height 40px
    border-radius 7px
    // border 1px solid rgba(bluegreen, 0.3)
    border 1px solid lighten(gray, 80)
    outline 0
    box-shadow none
    padding 0 4% 0 2%
    font-size 18px
    color darken(darkgray, 25)
    box-sizing border-box
    transition border 400ms ease-out
    &.reg
        border-color rgba(lighten(gray, 60), 0.4)
    &::placeholder
        font-size 16px
        color lighten(gray, 45)
    &:focus, &:valid
        border 1px solid rgba(primaryblue, 0.9)
    &.invalid
        border-color rgba(red, 0.5)
        background rgba(red, 0.1)
        
textarea
    height auto
    min-height 80px
    padding 2%
.form, .form-full
    padding 30px 0
    & > *
        text-align right
        display inline-block
        vertical-align top
        width 100%
        position relative
        &.field
            margin-bottom 42px
            &:last-child
                padding-bottom 0
.form > *
    @media screen and (min-width:600px)
        width 49%
        &:nth-child(odd)
            padding-left 5px
        &:nth-child(even)
            padding-right 5px    
.form-wrap
    +below(414px)
        margin-top 20px
        padding-top 20px
        overflow auto
        max-height 80vh
.field
    position relative
    display inline-block
    &.date
        fa(calendar)
    &.search
        fa(search)
    &.question
        fa(question)
    &.upload
        fa(upload)
    &:before
        position absolute
        left 4%
        top 50%
        transform translateY(-50%)
        color lighten(gray, 50)
        transition all 200ms ease
    &.valid:before
        color bluegreen


i.fa-close
    position absolute
    color lighten(gray, 40)
    left -5%
    top 0%
    transform translate(0, -50%)
    padding 1%
    z-index 9
    // background #fff
    cursor pointer
.multiselect
    text-align right
    .multiselect__select
        left 1px
        right initial
    .multiselect__tags
        padding 8px 20px 0 40px

.flb
    position relative
    display inline-block
    input, textarea
        width 100%
        transition background 400ms ease-out
        & + label
            display inline-block
            position absolute
            top 0
            transform translate(-15%, 12px)
            color lighten(gray, 79)
            font-size 18px
            transition transform 200ms ease-out, color 200ms ease-out, font-size 200ms ease-out
            &.dots:after
                content '..'
        &:focus, &:valid
            & + label
                transform translate(0, -25px)
                font-size 14px
                color darken(gray, 10)
                &:after
                    content ':'
                    display inline-block
    textarea, input
        &:valid
            background rgba(#0bddbe, 0.02)
.field-select
    position relative
    .multiselect + label
        position absolute
        top 20px
        right 0
        transform translate(-10px, -8px)
        color lighten(gray, 79)
        font-size 18px
        transition top 300ms ease, transform 300ms ease, color 300ms ease
        pointer-events none
    .multiselect--active,
    .unempty
        .multiselect__tags
            border 1px solid rgba(bluegreen, 0.3)
        & + label
            top 0
            transform translate(0, -25px)
            color darken(gray, 10)
            font-size 14px
            &:after
                content ':'

