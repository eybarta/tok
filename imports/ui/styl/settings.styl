@import './lib/rupture'
@import './variables'
@import './mixins'


.center
    margin 0 auto
.tcenter
    text-align center
.tright
    text-align right
.tleft
    text-align left
    
.right
    float right
.left
    float left

.topleft
    corner()
.topright
    corner(top, right)
// margin 
for alias, prop in $space
    for size,value in margins
        .{alias}-{size}
            {prop} value
            +below(breaks.tablet)
                {prop} round((value/1.8))
            +below(breaks.mobile)
                {prop} round((value/2))


.primary
    color bluegreen
.green
    color green
.red
    color red
.orange
    color orange