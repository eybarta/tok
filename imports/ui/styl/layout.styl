@lost --beta-direction rtl
@lost gutter 30px

html, body
    font-family 'Helvetica Thin'
    .en
        font-family 'Helvetica Thin'
    .heb
        font-family 'Varela Round'
        *
            direction rtl
    .rtl
        direction rtl !important
    .ltr
        direction ltr
        *
            direction ltr
    *
        box-sizing border-box
    a, a:visited, a:active
        text-decoration none

.block
    padding 5vmin
.block-60
    width 60vmax
    height @width
    margin 0 auto

.waffle
    width 100%
    height 100%
    margin auto
    & > *
        box-sizing border-box
        lost-waffle 1/3 3 15px
        lost-align center
    &-4 > *
        lost-waffle 1/4 4 15px
        


for num in (1..12)
	.col-{num}
		lost-column num/12
	.parent-{num}
		& > *
			lost-waffle 1/num num
    .parent-col-{num}
        & > *
            lost-column 1/num num
	

main
    min-height 95vh
footer
    position relative
    height 5vh
    width 100%
    background rgba(#000, 0.8) url('img/congruent_pentagon.png') repeat
    &:before
        content ''
        position absolute 0 0 0 0
        background rgba(bluegreen, 0.45)
    small
        self-center()
        color #fff