@import './variables'
.btn
    cursor pointer
    font-family 'Varela Round'
    display inline-block
    padding 0 8px
    height 40px
    background rgba(#fff, 0.35)
    outline none
    border 2px solid transparent
    border-radius 12px
    white-space nowrap
    transition all 400ms ease
    i
        font-size 18px
        vertical-align middle
        &.flip
            transition transform 400ms ease-out
            transform rotateY(0deg)
    &:hover
        i.flip
            transform rotateY(-180deg)
    &-big
        font-size 40px
        height 60px
    &.disabled
        opacity 0.2
    for $color, value in colormap
        &-{$color}
            border-color rgba(darken(value, 5), 0.7)
            color darken(value, 5)
            &-inverse
                color lighten(value, 95)
                background-color darken(value, 5)
            &:hover, &.router-link-active
                color darken(value, 1)
                background rgba(darken(value, 5), 0.005)